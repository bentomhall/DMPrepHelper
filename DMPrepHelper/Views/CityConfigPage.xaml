                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="128"/>
                                <ColumnDefinition Width="64"/>
                                <ColumnDefinition Width="48"/>
                                <ColumnDefinition Width="48"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{x:Bind Key, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="0" TextAlignment="Right" HorizontalAlignment="Stretch"/>
                            <TextBox Text="{x:Bind Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" HorizontalAlignment="Stretch"/>
                            <Button x:Name="AddListItemButton" Content="+" Grid.Column="2" Tapped="Button_Tapped"/>
                            <Button x:Name="DeleteListItemButton" Content="-" Grid.Column="3" Tapped="Button_Tapped"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>--><!--
        <StackPanel HorizontalAlignment="Center" Grid.Column="1" Grid.Row="13" VerticalAlignment="Center">
            <Button Command="{x:Bind ViewModel.RemoveListItemCommand}" Content="Remove Selected"/>
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{x:Bind ViewModel.NewRaceName, Mode=TwoWay}"/>
                <TextBlock Margin="8,0,8,0"> :</TextBlock>
                <TextBox Text="{x:Bind ViewModel.NewRaceWeight, Mode=TwoWay}"/>
            </StackPanel>
            <Button Command="{x:Bind ViewModel.AddListItemCommand}" Content="Add new race with weight"/>
        </StackPanel>-->
    </Grid>
</Page>
